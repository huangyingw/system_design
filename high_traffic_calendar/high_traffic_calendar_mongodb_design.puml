@startuml

entity "Users" as U {
  *_id: ObjectId (PK)
  --
  username: String
  email: String
  password: String
}

entity "Events" as E {
  *_id: ObjectId (PK)
  --
  owner_id: ObjectId (FK to Users)
  event_name: String
  description: String
  start_time: Date
  end_time: Date
  recurrence_rule: String
  participants: Array<Participant>
  -- Indexes
  -- owner_id: 1
  -- start_time: 1, end_time: 1
  -- event_name: "text", description: "text"
}

entity "Participant" as P {
  *user_id: ObjectId (FK to Users)
  --
  status: String
}

entity "Reminders" as R {
  *_id: ObjectId (PK)
  --
  event_id: ObjectId (FK to Events)
  user_id: ObjectId (FK to Users)
  reminder_time: Date
  -- Indexes
  -- user_id: 1
  -- event_id: 1
}

U ||--o{ E : creates
E ||--o{ P : includes
E ||--o{ R : has

@enduml
