{
  "language": "Chinese",
  "terminal": {
    "shell": "zsh",
    "commandExecution": {
      "defaultShell": "/bin/zsh",
      "environmentSetup": [
        "Use zsh for all terminal commands",
        "Ensure proper PATH is set for tools",
        "Use absolute paths when necessary"
      ],
      "errorHandling": {
        "captureOutput": true,
        "checkExitStatus": true,
        "retryStrategy": "Retry with modified command if initial attempt fails"
      }
    }
  },
  "plantUML": {
    "standards": {
      "components": {
        "containerStyle": "rectangle",
        "componentDefinition": "Use component for internal definitions",
        "connectionHandling": "Components only inside containers, handle connections outside",
        "cacheAnnotation": "Annotate cache components with key-value pairs"
      },
      "layout": {
        "background": "Light background for better readability",
        "grouping": "Logical component grouping",
        "connections": "Minimize crossings, maintain clarity",
        "notes": "Consistent positioning, clear content"
      },
      "colors": {
        "flows": {
          "primary": "Deep Orange",
          "secondary": "Deep Blue",
          "auxiliary": "Deep Yellow",
          "management": "Deep Purple",
          "monitoring": "Deep Cyan"
        }
      }
    },
    "designPrinciples": [
      "Prioritize readability and clarity",
      "Focus on system interactions and data flow",
      "Include performance considerations",
      "Show scalability aspects",
      "Highlight security measures"
    ],
    "qualityControl": {
      "checkTiming": "After each generation or modification",
      "validationSteps": [
        "Syntax validation",
        "Component relationships",
        "Style compliance",
        "Diagram structure",
        "Text consistency"
      ],
      "autoFix": {
        "enabled": true,
        "priorities": [
          "Syntax errors",
          "Connection issues",
          "Style violations"
        ],
        "verification": true
      }
    }
  },
  "rules": [
    {
      "pattern": "*.puml",
      "commands": [
        {
          "command": "./check_puml.sh ${file}",
          "trigger": "save"
        }
      ]
    }
  ]
} 
