@startuml Common Style

' Set the default style for all diagrams
skinparam backgroundColor white
skinparam handwritten false
skinparam defaultFontName Arial
skinparam defaultFontSize 14

' Component styles
skinparam component {
    BackgroundColor #FEFECE
    BorderColor #666666
    FontColor #000000
}

' Database styles
skinparam database {
    BackgroundColor #F8F8F8
    BorderColor #666666
    FontColor #000000
}

' Queue styles
skinparam queue {
    BackgroundColor #FFEFDB
    BorderColor #666666
    FontColor #000000
}

' Rectangle styles
skinparam rectangle {
    BackgroundColor #FAFAFA
    BorderColor #666666
    FontColor #000000
}

' Arrow styles
skinparam arrow {
    Color #666666
    FontColor #666666
}

' Note styles
skinparam note {
    BackgroundColor #FFF3E0
    BorderColor #E65100
    FontColor #000000
}

' Padding and spacing
skinparam padding 8
skinparam margin 10

@enduml 