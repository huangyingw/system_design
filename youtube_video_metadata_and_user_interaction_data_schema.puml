' Color scheme
skinparam backgroundColor #2E3440
skinparam defaultFontColor #ECEFF4
skinparam class {
  BackgroundColor #3B4252
  ArrowColor #88C0D0
  BorderColor #81A1C1
  FontColor #E5E9F0
}
